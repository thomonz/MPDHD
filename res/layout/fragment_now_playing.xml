<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/controlsLinearLayout"
            android:layout_width="512dp"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/albumArtImageView"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:src="@drawable/albumart_mp_unknown" />

            <TextView
                android:id="@+id/songTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/artistTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/albumTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/previousImageButton"
                    android:layout_width="171dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_playback_ic_prev"
                 />

                <ImageButton
                    android:id="@+id/playPauseImageButton"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_playback_ic_play"
                 />

                <ImageButton
                    android:id="@+id/nextImageButton"
                    android:layout_width="171dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_playback_ic_next"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repeatShuffleLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                 >

                <ImageButton
                    android:id="@+id/repeatImageButton"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mp_repeat_off_btn"
                     />

                <ImageButton
                    android:id="@+id/randomImageButton"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mp_shuffle_off_btn"
                     />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreInfoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/moreListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seekBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/elapsedTextView"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="999.99"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <SeekBar
            android:id="@+id/trackSeekBar"
            android:layout_width="1170dp"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/lengthTextView"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="999:99"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>